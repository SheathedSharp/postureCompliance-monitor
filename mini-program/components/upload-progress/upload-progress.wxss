/* components/upload-progress/upload-progress.wxss */
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  /* background-color: aliceblue; */
  pointer-events: auto;
}

.title_container {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.title {
  font-size: 35rpx;
  width: 100%;
  font-weight: 900;
  text-align: center;
}

.close {
  position: absolute;
  right: 20rpx;
}

.block {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-top: 20%;
  width: 80%;
  height: 30%;
  background-color: #fff;
  border-radius: 5%;
}