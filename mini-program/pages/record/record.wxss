}

.summary {
	background-color: #3F5881;
	height: 400rpx;
	margin: 20rpx;
	border-radius: 20rpx;
	display: flex;
	flex-direction: column;
}

.summary .title {
	font-size: 40rpx;
	color: azure;
	margin: 20rpx auto;
}

.summary view {
	height: 33%;
	color: azure;
	font-size: 33rpx;
	margin-left: 35rpx;
}

.remind {
	display: flex;
	flex-direction: row;
}

.summary .box {
	width: 280rpx;
	height: 40rpx;
	border-radius: 15rpx;
	background-color: azure;
	margin-top: 5rpx;
}

.summary .time {
	float: right;
	margin-left: 80rpx;
}

/* 状态 */
.state {
	background-color: #3F5881;
	height: 150rpx;
	margin: 20rpx;
	border-radius: 20rpx;
	display: flex;
}

.row {
	width: 200rpx;
	height: 100rpx;
	display: flex;
	margin: 30rpx;
}

.color {
	background-color: aqua;
	width: 70rpx;
	height: 70rpx;
	border-radius: 20rpx;
}

.row text {
	font-size: 35rpx;
	color: azure;
	margin: 10rpx auto;
}

.state .s1 {
	font-size: 35rpx;
	color: azure;
	margin-left: 280rpx;
	margin-top: 45rpx;
}

.record-list-wrapper {
	margin: 20rpx;
	border-radius: 20rpx;
	background-color: #3F5881;
	text-align: center;
	overflow: hidden;
}

.arrow-bottom {
	height: 80rpx;
	width: 40rpx;
	line-height: 80rpx;
}

@keyframes record-list-enter {
	from {
		height: 0;
	}

	to {
		height: 240rpx;
	}
}

.record-list {
	animation: record-list-enter 0.5s;
	height: 240rpx;
	padding: 20rpx;
	display: flex;
}

.record-item {
	height: 220rpx;
	width: 220rpx;
	margin-right: 20rpx;
	background: linear-gradient(135deg, rgb(60, 172, 209), #b7cef1 100%);
	flex-shrink: 0;
	border-radius: 20rpx;
}