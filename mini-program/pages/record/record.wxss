}

.remark {
	background-color: #3F5881;
	height: auto;
	margin: 20rpx;
	border-radius: 20rpx;
}

.remark-title {
	margin: 20rpx;
	color: white;
	font-size: 40rpx;
}

.remark-input {
	padding: 20rpx 20rpx 20rpx 20rpx;
	font-size: 35rpx;
	display: flex;
	flex-direction: row;
	
}

.remarkInput-icon {
	margin-left: 40rpx;
}

.echarts2 {
	width: 90%;
