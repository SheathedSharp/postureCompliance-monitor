<user-btn />

<view class="setting">
	<!-- 预警角度 -->
	<view class="angle" style="margin-top: {{(topheight-57)+'px'}};">
		<view class="title">预警角度</view>

		<view class="ungle">
			<image class="background" src="/image/setting/mask4.png" style="width: 100%;height: 100%;position: absolute;z-index:1;left: 0;top: 0;"></image>
			<view class="mask" style="background: center/cover url(/image/setting/mask0.png);"></view>
			<swiper class="ungle-swiper" display-multiple-items='3' bindchange='degreeInput' easing-function="default" current="{{angle_index}}">
				<block>
					<swiper-item class="ungle-item"></swiper-item>
				</block>
				<block wx:for="{{degreeContext.data.time_list}}" wx:key="index">
					<swiper-item class="ungle-item">{{item}}</swiper-item>
				</block>
				<block>
					<swiper-item class="ungle-item"></swiper-item>
				</block>
			</swiper>
			<image class="left" src="/image/setting/arrowleft.png"></image>
			<image class="right" src="/image/setting/arrowright.png"></image>
		</view>
	</view>

	<!-- 检测频率 -->
	<view class="frequency">
		<text class="title">预警时间</text>
		<view class="item1">
			<image src="/image/setting/mask2.png" style="position: absolute;z-index:3;top:90px;left:100px;width: 46px;height: 56px;"></image>
			<image src="/image/setting/mask3.png" style="position: absolute;z-index:2;top:50px;left:105px;width:35px;height: 140px;"></image>
			<text>设</text>
			<swiper class="ungles" 	current="{{time_index}}" display-multiple-items='3' vertical="false">
				<block wx:for="{{angle}}" wx:key="index">
					<swiper-item>{{item}}</swiper-item>
				</block>
			</swiper>
			<text style="margin-left: 70px;">为警戒时间</text>
		</view>
	</view>
	<!-- 保存设置 -->
	<view class="ok" bindtap="comfirmSetDegree">保存设置</view>
	<view class="ok" bindtap="init_xyz">角度初始化</view>
</view>