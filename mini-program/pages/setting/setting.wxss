page {
	background: #1A305D;
}


.setting {
	width: 95%;
	padding: 20rpx 0;
	background: linear-gradient(180deg, #1B2F51 0%, #0147B7 100%);
	margin: 40rpx auto;
	border-radius: 10px 10px 10px 10px;

}

/* 预警角度*/

.angle {
	position: relative;
	height: 300rpx;
}

.angle .title{
	text-align: center;
	font-size: 15px;
	font-family:".PingFang SC-Semibold", PingFang SC;
	font-weight:600;
	color:rgba(255, 255, 255, 0.74);
}

.angle swiper{
	margin-top: 15px;
}

.ungle {
	position: relative;
	width: 494rpx;
	height: 46rpx;
	margin: 0 auto;
	margin-top: 52rpx;
	color:rgb(37, 33, 33);
	font-size: 20px;
	line-height: 46rpx;
	font-weight: 600;

}
.ungle-swiper{
	width: 100%;
	height: 100%;
	position: relative;
	z-index: 2;
}
.ungle swiper-item{
	text-align: center;
}

.mask {
	box-shadow: inset 0rpx 0rpx 12px 1px #0014C6;z-index: 2;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	width: 74px;
	height: 35px;
	border-radius: 40rpx;
}

.left {
	position: absolute;
	left: 0;
	top: 0;
	bottom: 0;
	margin: auto 0;
	width: 17rpx;
	height: 17px;
	z-index: 6;
}

.right {
	position: absolute;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto 0;
	width: 17rpx;
	height: 17px;
	z-index:5;
}

/* 预警时间 */
.time {
	position: relative;
	height: 380rpx;
	font-size: 15px;
	color: rgba(255, 255, 255, 0.7400);
	text-align: center;
}

.watch {
	height: 106px;
	width: 228px;
	margin: 21px auto;
	border-radius: 10px;
	font-size: 65px;

}

.item {
	display: inline-block;
	width: 53px;
	height: 53px;
	margin-right: 5px;
	font-size: 40px;
	color: #fff;
	line-height: 50px;
	text-align: center;
	background-color: #1989fa;
	border-radius: 2px;
	margin-top: 20px;
}


/*检测频率*/
.frequency {
	position: relative;
	height: 251px;
	color: #CCD3DF;
	text-align: center;
}

.item1 {
	display: flex;
	flex-direction: row;
	height: 139px;
	width: 280px;
	margin-left: 60px;
	margin-top: 28px;
	font-size: 26px;
	color: #fff;
}

.item1 text {
	line-height: 139px;
}

.item1 .ungles {
	position: absolute;
	z-index: 33;
	width: 40px;
	height: 139px;
	margin: 8px 42px;
	color: #fff;
	font-size: 24px;
}

/* 保存设置 */
.ok {
	margin: auto;
	border-radius: 30rpx;
	font-size: 20px;
	color: #fff;
	text-align: center;
	line-height: 47px;
	margin-bottom: 47px;
	width: 132px;
	height: 47px;
	background: rgba(48, 144, 255, 0.89);
	box-shadow: 0px 3px 16px 1px rgba(18, 43, 172, 0.32), inset 0px 3px 6px 1px rgba(255, 255, 255, 0.16);
	border-radius: 20px 20px 20px 20px;
	opacity: 1;
	font-weight: 600;
}